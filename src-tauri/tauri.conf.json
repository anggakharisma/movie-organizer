{
	"build": {
		"beforeDevCommand": "pnpm dev",
		"beforeBuildCommand": "pnpm build",
		"devPath": "http://localhost:1420",
		"distDir": "../dist",
		"withGlobalTauri": false
	},
	"package": {
		"productName": "MORG",
		"version": "0.0.1-alpha"
	},
	"tauri": {
		"allowlist": {
			"all": false,
			"dialog": {
				"all": true
			},
			"shell": {
				"all": false,
				"open": true
			},
			"path": {
				"all": true
			},
			"fs": {
				"all": true,
				"scope": [
					"**"
				]
			},
			"protocol": {
				"asset": true,
				"assetScope": [
					"**"
				]
			},
			"window": {
				"all": false,
				"close": true,
				"hide": true,
				"show": true,
				"setSize": true,
				"maximize": true,
				"minimize": true,
				"unmaximize": true,
				"unminimize": true,
				"startDragging": true
			}
		},
		"bundle": {
			"active": true,
			"targets": "all",
			"identifier": "movie.dashdev.com",
			"icon": [
				"icons/32x32.png",
				"icons/128x128.png",
				"icons/128x128@2x.png",
				"icons/icon.icns",
				"icons/icon.ico"
			]
		},
		"security": {
			"csp": null
		},
		"windows": [
			{
				"decorations": false,
				"fullscreen": false,
				"resizable": true,
				"title": "MORG",
				"width": 1280,
				"height": 720
			}
		]
	}
}
